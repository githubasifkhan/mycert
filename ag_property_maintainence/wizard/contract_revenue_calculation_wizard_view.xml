<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="contract_revenue_generation_wiz_form" model="ir.ui.view">
            <field name="name">contract.revenue.calculation.wizard.form</field>
            <field name="model">contract.revenue.calculation.wizard</field>
            <field name="arch" type="xml">
                <form string="Revenue Generation">
                   <group invisible="0">
                        <group>
                            <field name="name"/>
                            <field name="contract_id"/>
                            
                        </group>
                   </group>
					<field name="wiz_line" invisible="0">
						<tree editable="bottom">
							 <field name="start_date"/>
							 <field name="end_date"/>
						     <field name="unit_id"/>
							 <field name="wiz_id"/>
							 <field name="type"/>
							 <field name="rent_amount" sum="Total"/>
							<field name="free_days"/>
							<field name="month_s_date"/>	
								<field name="month_e_date"/>							
						
						</tree>
				</field>
                    <footer>
                    <button string="Revenue" name="generate_contract_revenue" type="object" class="btn-primary"/>
                    <button string="Create" name="revenue_split_monthly" type="object" class="btn-primary" invisible="0"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_contract_revenue_generation_wiz" model="ir.actions.act_window">
            <field name="name">Contract Revenue Generation</field>
            <field name="res_model">contract.revenue.calculation.wizard</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="contract_revenue_generation_wiz_form"/>
            <field name="target">new</field>
        </record>

       
    </data>
</odoo>

