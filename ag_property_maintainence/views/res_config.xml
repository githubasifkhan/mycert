                        <div >
                            <field name="revenue_account_id" class="oe_inline"/>
                        </div>
                        <label for="id" string="Deposit Recived Account"/>
                        <div >
                            <field name="deposit_account_id" class="oe_inline"/>
                        </div>
                        <label for="id" string="Cheque Received Account"/>
