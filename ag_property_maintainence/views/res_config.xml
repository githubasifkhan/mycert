		<record id="action_property_config" model="ir.actions.act_window">
            <field name="name">Configure Property</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.config.settings</field>
            <field name="view_id" ref="view_property_config"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
  

       <menuitem id="property_config_settings" name="Settings" parent="property_config_menu" sequence="100" action="action_property_config" />

    </data>
